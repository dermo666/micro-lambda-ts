{
  "compilerOptions": {
    "lib": [
      "es2020"
    ],
    "module": "commonjs",
    "target": "es2020",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": ".build",
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": true,
  },
  "ts-node": {
    "files": true
  }
}